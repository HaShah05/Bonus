<!-- Include the shared header template -->
<%- include ../Partials/header.ejs %>

<!-- Include the shared main navigation bar -->
<%- include ../Partials/main_nav.ejs %>

<!-- Workout Database Content -->
<main class="container">
    <div class="row">
        <!-- Center the content on the page -->
        <div class="offset-md-1 col-md-10">
            <!-- Page title with custom styling -->
            <h1 style="color: #FFFFFF; font-family: 'Arial', sans-serif; font-size: 100px;">Workout Log</h1>

            <br>
            <!-- Button to add a new workout -->
            <a href="/workoutslist/add" class="btn btn-outline-dark btn-lgy" role="button">
                <i class="fas fa-plus-circle"></i> Add Workout
            </a>

            <!-- Table displaying the workout log -->
            <table class="table table-bordered table-striped table-hover shadow-sm">
                <!-- Table headers -->
                <tr class="d-flex">
                    <th class="text-center col-2">Calories</th>
                    <th class="text-center col-2">Exercise</th>
                    <th class="text-center col-2">Sets</th>
                    <th class="text-center col-2">Reps</th>
                </tr>

                <!-- Loop through the WorkoutList array to display each workout -->
                <% for(let count = 0; count < WorkoutList.length; count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= WorkoutList[count].Calories %></td>
                    <td class="text-center col-2"><%= WorkoutList[count].Exercise %></td>
                    <td class="text-center col-2"><%= WorkoutList[count].Sets %></td>
                    <td class="text-center col-2"><%= WorkoutList[count].Reps %></td>
                    
                    <!-- edit Button -->

                    <td class="text-center col-2">
                        <a href="/workoutslist/edit/<%= WorkoutList[count]._id %>" class="btn btn-outline-dark btn-lg">
                            <i class="fas fa-pencil-alt"></i> Edit
                        </a>
                    </td>

                    <!-- Delete button for the workout -->
                    <td class="text-center col-2">
                        <a href="/workoutslist/delete/<%= WorkoutList[count]._id %>" 
                            class="btn btn-danger btn-sm" 
                            onclick="return confirm('Are you sure you want to delete this workout?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>

<!-- Include the shared footer template -->
<%- include ../Partials/footer.ejs %>
